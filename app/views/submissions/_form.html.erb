<%= form_for(@submission) do |f| %>
	<div class="field">
		<%= f.label :content %>
    	<%= f.text_area :content %>
  	</div>  	
  	* Y&R reserves the right to remove any inappropriate submissions

  	<div class="field">
    	<%= f.label :name %>
    	<%= f.text_field :name %>
  	</div>
  	<div class="field">
    	<%= f.label :email %>
    	<%= f.text_field :email %>
  	</div>
  
  	<div class="actions">
		<%= submit_tag("CLEAR", {:name => "reset", :id => "reset_button", :type => "reset" }) %>
    	<%= f.submit "SUBMIT" %>
  	</div>
<% end %>