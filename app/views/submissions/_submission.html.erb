	<div id="now" class="dl">
		<b><%= submission.name %></b>
		<p style="display:none;"><%= submission.id %></p>
		<p class="dd edit"><%= submission.content %></p>
		
		
		<p id="soc-button-share">
	 		<a class="non-link" href="http://www.facebook.com/sharer/sharer.php?u=http://www.burnbadluck/submissions/<%=submission.id %>&t=Burn%20your%20bad%20luck%20now!">
	 			<img alt="Share FB" class="share_button2" id="share_button_head" src="/assets/fbshare.png">	
	 		</a>
	 		<iframe allowtransparency="true" frameborder="0" scrolling="no"
        			src="//platform.twitter.com/widgets/tweet_button.html?count=none&text=Bad%20luck%20haunting%20you?%20Seek%20professional%20help%20at&url=http%3A%2F%2Fwww.burnbadluck.com/submissions/<%=submission.id %>&hashtags=burnbadluck"
        			style="width:60px; height:20px;"></iframe>
	 	</p>
	 		
    	<% if request.fullpath == "/admin" %>
    		<script>
			$('.dd.edit').editable('/submissions/<%=submission.id%>', 
    				{
    					name   : "submission[content]",
        				type   : 'textarea',
        				select : true,
        				submit : 'OK',
        				cancel : 'CANCEL',
        				submitdata:         
        			{
        				_method: "put", 
        				"submission[email]": "<%=submission.email%>",
        				"submission[name]": "<%=submission.name%>",
        				authenticity_token: AUTH_TOKEN
        			}
    		});
			</script>
    		<dd><%= link_to 'Delete', submission, method: :delete %></dd>
  		<% end %>
  	</div>