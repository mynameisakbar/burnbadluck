<div id="main">
	<section id="thx-link" class="pad15">
			<h2>THANK YOU</h2>

			<p>Thank you for submitting your bad luck.</p>
			
			Hereâ€™s your message:
			<p id="thx-content" ></p>
			
			<p>
				Now that your bad luck is going to be burnt away, help
				your friends burn their bad luck. Share.
			</p>
			
			<p><i>Bad Luck Burning Team</i></p>

			<div id="soc-button">
				<%= image_tag("fbs.png", :alt => "Share FB", :class => "round share_button") %>
				<a href="https://twitter.com/share" class="twitter-share-button-top" 
	        	data-text="I'm burning my bad luck. Are you?" 
	        	data-hashtags="burnbadluck" data-url="http://burnbadluck.com/" 
	        	data-lang="en">Tweet</a>
	        </div>
	</section>
	<div id="new-submission-div" class="pad15">
		<img id="submit-text" src="/assets/submit-text.png">
		<!--div id="submit-text1">SUBMIT YOUR BAD LUCK</div>
		<div id="submit-text2">START LUCKY FOR THE LUNAR NEW YEAR</div-->
		<div id="toggle">CLICK HERE</div>
		<%= render 'form' %>
	</div>

	<div id ="list-submission">
		<% @submissions.reverse_each do |submission| %>
  		<div class="dl">
		<b><%= submission.name %></b><br/>
  			<div class="dd"><%= submission.content %></div>
    			<%= image_tag("fbs.png", :alt => submission.id, :class => "share_button_ round") %>
    			<a href="https://twitter.com/share" class="twitter-share-button" 
	        	data-text="I'm burning my bad luck. Are you?" 
	        	data-hashtags="burnbadluck" data-url="http://burnbadluck.com/submissions/<%= submission.id %>" 
	        	data-lang="en"></a>
    		<% if request.fullpath == "/admin" %>
    			<dd><%= link_to 'Delete', submission, method: :delete %></dd>
  			<% end %>
  		</div>
  		<% end %>
	</div>
	<br /><br/>
</div>

